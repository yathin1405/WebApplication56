@model WebApplication56.Models.RegisterAllViewModel

@{
    ViewBag.Title = "Registerp";
}

@*<h2>Registerp</h2>*@

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/Content/vendor/font-awesome/css/font-awesome.min.css">
    <!-- Custom Font Icons CSS-->
    <link rel="stylesheet" href="~/Content/css/font.css">
    <!-- Google fonts - Muli-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Muli:300,400,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="~/Content/css/style.green.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="~/Content/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>

<style>
    .leftm {
        margin-left: 7px;
    }
</style>

@using (Html.BeginForm())
{
    <body>
        <div class="login-page">
            <div class="container d-flex align-items-center">
                <div class="form-holder has-shadow">
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.AccountType)
                        <form method="get">

                            <div class="row">
                                <!-- Logo & Information Panel-->
                                <div class="col-lg-6 bg-white">
                                    <div class="form d-flex align-items-center">






                                        <div style="height:100%;" class="content">
                                            <a style="width:100%;color:#d42121;font-size:small;" href="@Url.Action("Index", "Home")" class="signup">Back to home</a>

                                            <div style="width:100%;margin-top:70px;margin-bottom:70px;text-align:center;">
                                                <h3 class="text-primary">Customer Registration</h3>
                                            </div>



                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.FName, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.FName, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">First Name</label>
                                            </div>
                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.MName, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.MName, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">Middle Name</label>
                                            </div>
                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.LName, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.LName, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">Last Name</label>
                                            </div>


                                            <div class="copyrights text-center">
                                                <p>Integrated by <a href="https://bootstrapious.com" class="external">Quality Control</a></p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <!-- Form Panel    -->
                                <div class="col-lg-6" style="background-color:#2d3035;">
                                    <div class="form d-flex align-items-center">
                                        <div class="content">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.IdentityNumber, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.IdentityNumber, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">Identity Number</label>
                                            </div>

                                            <div class="form-group col-10 i-checks">
                                                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                                @*@Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })*@
                                                @Html.RadioButtonFor(m => m.Gender, "Male", new { @id = "radioCustom1", @type = "radio", @class = "radio-template leftm" }) <label for="radioCustom1">Male</label>
                                                @Html.RadioButtonFor(m => m.Gender, "Female", new { @id = "radioCustom2", @type = "radio", @class = "radio-template leftm" }) <label for="radioCustom1">Female</label>

                                            </div>












                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">Email Address</label>
                                            </div>
                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                <label for="login-username" class="label-material">Password</label>
                                            </div>
                                            <div class="form-group col-10">
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                <label for="login-password" class="label-material">ConfirmPassword</label>
                                            </div>
                                            <input type="submit" value="Create Account" class="btn btn-primary" />

                                            <br>
                                            <small>Alread have an account? </small>
                                            <a href="@Url.Action("Login", "Account")" class="signup">Log in here!</a>

                                        </div>


                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- JavaScript files-->
        <script src="~/Content/vendor/jquery/jquery.min.js"></script>
        <script src="~/Content/vendor/popper.js/umd/popper.min.js"></script>
        <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/vendor/jquery.cookie/jquery.cookie.js"></script>
        <script src="~/Content/vendor/chart.js/Chart.min.js"></script>
        <script src="~/Content/vendor/jquery-validation/jquery.validate.min.js"></script>
        <script src="~/Content/js/front.js"></script>
    </body>
}